generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @unique @default(uuid())
  email        String        @unique
  password     String
  firstName    String?
  lastName     String?
  phoneNumber  String?
  birthDate    DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  referredBy   String?
  referralCode String        @unique
  balance      Int           @default(0)
  role         Role          @default(USER)
  writing      Writing[]
  Transaction  Transaction[]
}

model Transaction {
  id              String                    @id @unique @default(uuid())
  userId          String
  amount          Int
  createdAt       DateTime                  @default(now())
  updatedAt       DateTime                  @updatedAt
  description     TransactionDescription
  transactionType TransactionType
  user            User                      @relation(fields: [userId], references: [id])
}

model Writing {
  id           String       @id @unique @default(uuid())
  cueCard      String
  userId       String
  content      String?
  cueId        String
  writingType  WritingType
  examType     ExamType
  commentLevel CommentLevel
  createdAt    DateTime     @default(now())
  user         User         @relation(fields: [userId], references: [id])
}

enum CommentLevel {
  FREE
  SILVER
  GOLD
}

enum Role {
  USER
  ADMIN
}

enum ExamType {
  ACADEMIC
  GENERAL
}

enum WritingType {
  LETTER
  ESSAY
}

enum TransactionDescription {
  SINGUP_GIFT
  REFER_GIFT
  BONUS
  WRITING_COMMENT
  WALLET_CHARGE
}

enum TransactionType {
  LOCAL
  REMOTE
}

