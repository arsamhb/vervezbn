generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String            @id @unique @default(uuid())
  email               String            @unique
  password            String
  firstName           String?
  lastName            String?
  phoneNumber         String?
  birthDate           DateTime?
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  referredBy          String?
  referralCode        String            @unique
  balance             Int               @default(0)
  role                Role              @default(USER)
  writing             Writing[]
  transactions        BankTransaction[]
  InternalTransaction AppTransaction[]
}

model BankTransaction {
  id        String   @id @unique @default(uuid())
  userId    String
  amount    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model AppTransaction {
  id          String                    @id @unique @default(uuid())
  userId      String
  amount      Int
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
  description AppTransactionDescription
  user        User                      @relation(fields: [userId], references: [id])
}

model Writing {
  id           String       @id @unique @default(uuid())
  userId       String
  content      String
  cueId        String
  writingLevel WritingLevel
  createdAt    DateTime     @default(now())
  user         User         @relation(fields: [userId], references: [id])
}

enum WritingLevel {
  REGULAR
  PREMIUM
}

enum Role {
  USER
  ADMIN
}

enum WritingType {
  ACADEMIC
  GENERAL
}

enum AppTransactionDescription {
  SINGUP_GIFT
  REFER_GIFT
  BONUS
  WRITING_COMMENT
  WALLET_CHARGE
}

